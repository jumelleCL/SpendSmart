@{
    ViewData["Title"] = "Expenses";
}

@model List<Expense>
<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Value</th>
                <th>Description</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach(var expense in Model)
                {
                    <tr>
                        <th>@expense.Id</th>
                        <th>@expense.Value</th>
                        <th>@expense.Description</th>
                    </tr>
                }
            }
        </tbody>
    using Microsoft.VisualBasic;
    </table>
</div>
